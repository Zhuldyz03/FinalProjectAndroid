<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.final_project">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.final_project.Activities.ResetPasswordActivity"></activity>
        <activity android:name="com.example.final_project.Activities.ForgotPasswordActivity" />
        <activity android:name="com.example.final_project.Activities.CartActivity" />
        <activity android:name="com.example.final_project.Activities.RestaurantMenuActivity" />
        <activity android:name="com.example.final_project.Activities.MainActivity" />
        <activity android:name="com.example.final_project.Activities.RegistrationActivity" />
        <activity
            android:name="com.example.final_project.Activities.SplashActivity"
            android:noHistory="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.final_project.Activities.LoginActivity" />
    </application>

</manifest>